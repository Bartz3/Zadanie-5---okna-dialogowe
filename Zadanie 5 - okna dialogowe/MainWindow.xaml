<Window x:Class="Zadanie_5___okna_dialogowe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie_5___okna_dialogowe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Click="AddClick">Dodaj</Button>
                <Button Click="EditClick">Edytuj</Button>
                <Button Click="DeleteClick">Usuń</Button>
                <Button Click="PreviewClick">Podgląd</Button>
            </ToolBar>
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="63*" />
                    <ColumnDefinition Width="199*"/>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="525*" />
                </Grid.ColumnDefinitions>
                <ListBox Margin="4,4,4,4" Name="MovieListBox" Grid.ColumnSpan="2"  />
                <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Center"/>

            </Grid>
        </DockPanel>
    </Grid>
</Window>
